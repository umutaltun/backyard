/* 
Prime Number Finding Algorithm
By Umut Altun
14.06.2020
*/

#include <stdio.h>
#define MAX 10000

int primenumbers[MAX]; //You can use list for making it better but i preferred the simple way 
int countofwork = 0; //Just for checking algorithm's performance
int arraylenght = 1;
	
bool isprimenumber(int number) {
	for (int i = 0; i < (arraylenght/2); i++) { //Maybe (arraylenght/2) can cause a problem but i didn't noticed
		countofwork++;
		if (number % primenumbers[i] == 0) {
			return false;
		}	
	}
	primenumbers[arraylenght] = number;
	arraylenght++;
	return true;
}
 
int main() {
	primenumbers[0] = 2;
	printf("%d\n",2);
	int i = 3;
	while (i <= 1000000) { //You can change 10000 to change the range of numbers to try (2 to x)
		countofwork++;
		if (isprimenumber(i)) {			
			printf("%d\n",i);
		}
		i++;
	}
	printf("Count of work: %d\n",countofwork);
    return 0;
}
